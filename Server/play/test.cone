fn bitfn(a u32, b u32) u32 {
    mut bin = a==0x1a;
    bin = b > 100u32;
    if a>4 {
      return b;
    }
    (a & bin | a ^ ~b).shl(1);
}

fn fact(mut nbr u32) u32 {
  mut result = 1;
  while nbr > 1 && !nbr>50 {
    result = result * nbr;
    break if result > 10000u;
    nbr = nbr - 1;
  }
  result;
  // if nbr { nbr*fact(nbr-1); } else { 1; };
}

fn calc(aa &mut i32, b = 1) i32 {
  imm a = *aa;
  *aa = 5;
  -a + (a+a)*b % b;
}
